{
  "include": ["client/src/**/*", "shared/**/*", "server/**/*"],
  "exclude": ["node_modules", "build", "dist", "**/*.test.ts"],
  {
  "compilerOptions": {
     "baseUrl": ".",
    "paths": {
      "@/*": ["client/src/*"]
    "outDir": "dist",
    "rootDir": "./",
    "module": "ESNext",
    "target": "ES2019",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true
  }
}
